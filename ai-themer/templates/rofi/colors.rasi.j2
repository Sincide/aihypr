/* Rofi Color Configuration
 * Generated by AI Themer from {{ palette.source_image }}
 * Extraction method: {{ palette.extraction_method }}
 * Quality score: {{ "%.2f"|format(palette.quality_score) }}
 */

* {
    /* Base colors */
    background: {{ colors.background | hex }};
    foreground: {{ colors.text | hex }};
    
    /* Primary colors */
    primary: {{ colors.primary | hex }};
    secondary: {{ colors.secondary | hex if colors.secondary else colors.primary | lighten(0.2) | hex }};
    accent: {{ colors.accent | hex if colors.accent else colors.primary | complement | hex }};
    
    /* Surface colors */
    surface: {{ colors.surface | hex if colors.surface else colors.background | lighten(0.1) | hex }};
    surface-variant: {{ colors.background | lighten(0.05) | hex }};
    
    /* Text colors */
    on-background: {{ colors.text | hex }};
    on-surface: {{ colors.text | hex }};
    on-primary: {{ colors.background | hex }};
    on-secondary: {{ colors.background | hex }};
    on-accent: {{ colors.background | hex }};
    
    /* State colors */
    hover: {{ colors.primary | alpha(0.1) | hex }};
    selected: {{ colors.primary | hex }};
    selected-foreground: {{ colors.background | hex }};
    urgent: {{ colors.primary | mix(colors.text, 0.7) | hex }};
    urgent-foreground: {{ colors.background | hex }};
    
    /* Border colors */
    border: {{ colors.background | lighten(0.2) | hex }};
    border-selected: {{ colors.primary | hex }};
    
    /* Transparency variants */
    background-alt: {{ colors.background | lighten(0.05) | hex }};
    highlight: {{ colors.primary | alpha(0.2) | hex }};
    
    /* Application specific */
    normal-background: @background;
    normal-foreground: @foreground;
    alternate-normal-background: @background-alt;
    alternate-normal-foreground: @foreground;
    selected-normal-background: @selected;
    selected-normal-foreground: @selected-foreground;
    
    active-background: @surface;
    active-foreground: @on-surface;
    alternate-active-background: @surface-variant;
    alternate-active-foreground: @on-surface;
    selected-active-background: @accent;
    selected-active-foreground: @on-accent;
    
    urgent-background: @background;
    urgent-foreground: @urgent;
    alternate-urgent-background: @background-alt;
    alternate-urgent-foreground: @urgent;
    selected-urgent-background: @urgent;
    selected-urgent-foreground: @urgent-foreground;
    
    /* Window and element colors */
    window-background: @background;
    window-border: @border;
    separator: @border;
    
    /* Input colors */
    inputbar-background: @surface;
    inputbar-foreground: @on-surface;
    inputbar-border: @border-selected;
    
    /* Mode switcher colors */
    mode-switcher-background: @surface;
    mode-switcher-foreground: @on-surface;
    mode-switcher-selected-background: @selected;
    mode-switcher-selected-foreground: @selected-foreground;
    
    /* Scrollbar colors */
    scrollbar-handle: @primary;
    scrollbar-background: @surface;
}

element {
    background-color: @normal-background;
    text-color: @normal-foreground;
}

element.normal.normal {
    background-color: @normal-background;
    text-color: @normal-foreground;
}

element.normal.urgent {
    background-color: @urgent-background;
    text-color: @urgent-foreground;
}

element.normal.active {
    background-color: @active-background;
    text-color: @active-foreground;
}

element.selected.normal {
    background-color: @selected-normal-background;
    text-color: @selected-normal-foreground;
}

element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color: @selected-urgent-foreground;
}

element.selected.active {
    background-color: @selected-active-background;
    text-color: @selected-active-foreground;
}

element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color: @alternate-normal-foreground;
}

element.alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color: @alternate-urgent-foreground;
}

element.alternate.active {
    background-color: @alternate-active-background;
    text-color: @alternate-active-foreground;
}

window {
    background-color: @window-background;
    border-color: @window-border;
}

mainbox {
    background-color: @background;
}

inputbar {
    background-color: @inputbar-background;
    text-color: @inputbar-foreground;
    border-color: @inputbar-border;
}

prompt {
    background-color: @inputbar-background;
    text-color: @primary;
}

textbox-prompt-colon {
    background-color: @inputbar-background;
    text-color: @primary;
}

entry {
    background-color: @inputbar-background;
    text-color: @inputbar-foreground;
}

case-indicator {
    background-color: @inputbar-background;
    text-color: @inputbar-foreground;
}

listview {
    background-color: @background;
}

scrollbar {
    background-color: @scrollbar-background;
    handle-color: @scrollbar-handle;
}

mode-switcher {
    background-color: @mode-switcher-background;
}

button {
    background-color: @mode-switcher-background;
    text-color: @mode-switcher-foreground;
}

button.selected {
    background-color: @mode-switcher-selected-background;
    text-color: @mode-switcher-selected-foreground;
}

message {
    background-color: @background;
}

textbox {
    background-color: @background;
    text-color: @foreground;
} 