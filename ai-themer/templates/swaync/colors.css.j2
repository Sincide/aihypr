/* SwayNotificationCenter Colors */
/* Generated by AI Themer from {{ palette.source_image }} */
/* Extraction method: {{ palette.extraction_method }} */

:root {
  /* Base colors */
  --bg-primary: {{ colors.background.hex }};
  --bg-secondary: {{ colors.surface.hex if colors.surface else colors.background.hex }};
  --bg-hover: {{ colors.surface.hex if colors.surface else colors.background.hex }};
  --fg-primary: {{ colors.text.hex }};
  --fg-secondary: {{ colors.text.hex }};
  --border-color: {{ colors.background.hex }};
  
  /* Accent colors */
  --accent-color: {{ colors.primary.hex }};
  --accent-hover: {{ colors.primary.hex }};
  --fg-accent: {{ colors.background.hex }};
  
  /* Urgency colors */
  --low-border: {{ colors.text.hex }};
  --normal-border: {{ colors.primary.hex }};
  --critical-border: {{ colors.accent.hex if colors.accent else colors.primary.hex }};
  --critical-bg: {{ colors.background.hex }};
  --critical-fg: {{ colors.accent.hex if colors.accent else colors.primary.hex }};
  
  /* State colors */
  --bg-critical: {{ colors.accent.hex if colors.accent else colors.primary.hex }};
  --bg-critical-hover: {{ colors.accent.hex if colors.accent else colors.primary.hex }};
  --fg-critical: {{ colors.background.hex }};
  
  --bg-warning: {{ colors.primary.hex }};
  --bg-warning-hover: {{ colors.primary.hex }};
  --fg-warning: {{ colors.background.hex }};
  
  --bg-success: {{ colors.primary.hex }};
  --bg-success-hover: {{ colors.primary.hex }};
  --fg-success: {{ colors.background.hex }};
  
  --bg-info: {{ colors.primary.hex }};
  --bg-info-hover: {{ colors.primary.hex }};
  --fg-info: {{ colors.background.hex }};
} 