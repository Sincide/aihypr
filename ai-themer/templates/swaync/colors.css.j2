/* SwayNotificationCenter Colors - Generated by AI Themer */
{% set bg_color = colors.background.hex if colors.background else "#1e1e2e" %}
{% set fg_color = colors.text.hex if colors.text else "#cdd6f4" %}
{% set primary_color = colors.primary.hex if colors.primary else "#89b4fa" %}
{% set accent_color = colors.accent.hex if colors.accent else primary_color %}

:root {
  --bg-primary: {{ bg_color }};
  --bg-secondary: {{ primary_color }};
  --bg-hover: {{ primary_color }};
  --fg-primary: {{ fg_color }};
  --fg-secondary: {{ fg_color }};
  --border-color: {{ primary_color }};
  --accent-color: {{ accent_color }};
  --accent-hover: {{ accent_color }};
  --fg-accent: {{ bg_color }};
  --low-border: {{ fg_color }};
  --normal-border: {{ primary_color }};
  --critical-border: {{ accent_color }};
  --critical-bg: {{ bg_color }};
  --critical-fg: {{ accent_color }};
  --bg-critical: {{ accent_color }};
  --bg-critical-hover: {{ accent_color }};
  --fg-critical: {{ bg_color }};
  --bg-warning: {{ primary_color }};
  --bg-warning-hover: {{ primary_color }};
  --fg-warning: {{ bg_color }};
  --bg-success: {{ primary_color }};
  --bg-success-hover: {{ primary_color }};
  --fg-success: {{ bg_color }};
  --bg-info: {{ primary_color }};
  --bg-info-hover: {{ primary_color }};
  --fg-info: {{ bg_color }};
} 