/* Waybar Colors Configuration */
/* Generated by AI Themer from {{ palette.source_image }} */
/* Extraction method: {{ palette.extraction_method }} */
/* GTK3 CSS Syntax */

/* Base colors */
@define-color bg_primary rgba({{ colors.background.r }}, {{ colors.background.g }}, {{ colors.background.b }}, 0.9);
@define-color bg_secondary {{ colors.surface.hex if colors.surface else colors.background.hex }};
@define-color bg_transparent rgba({{ colors.background.r }}, {{ colors.background.g }}, {{ colors.background.b }}, 0.5);
@define-color border_color rgba({{ colors.background.r }}, {{ colors.background.g }}, {{ colors.background.b }}, 0.5);

/* Text colors */
@define-color fg_primary {{ colors.text.hex }};
@define-color fg_secondary {{ colors.text.hex }};
@define-color fg_dark {{ colors.background.hex }};

/* Accent colors */
@define-color accent_blue {{ colors.primary.hex }};
@define-color accent_hover {{ colors.primary.hex }};

/* State colors */
@define-color urgent {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color critical {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color warning {{ colors.primary.hex }};
@define-color success {{ colors.primary.hex }};
@define-color info {{ colors.primary.hex }};

/* Module specific colors */
@define-color workspaces_focused {{ colors.surface.hex if colors.surface else colors.background.hex }};
@define-color workspaces_urgent {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color workspaces_hover rgba({{ colors.surface.r if colors.surface else colors.background.r }}, {{ colors.surface.g if colors.surface else colors.background.g }}, {{ colors.surface.b if colors.surface else colors.background.b }}, 0.3);

/* Battery colors */
@define-color battery_normal {{ colors.text.hex }};
@define-color battery_bg {{ colors.surface.hex if colors.surface else colors.background.hex }};
@define-color battery_charging {{ colors.primary.hex }};
@define-color battery_critical {{ colors.accent.hex if colors.accent else colors.primary.hex }};

/* Power profile colors */
@define-color power_performance {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color power_balanced {{ colors.primary.hex }};
@define-color power_saver {{ colors.primary.hex }};

/* Module backgrounds */
@define-color clock_bg {{ colors.surface.hex if colors.surface else colors.background.hex }};
@define-color cpu_bg {{ colors.primary.hex }};
@define-color memory_bg {{ colors.secondary.hex if colors.secondary else colors.primary.hex }};
@define-color disk_bg {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color backlight_bg {{ colors.primary.hex }};
@define-color network_bg {{ colors.primary.hex }};
@define-color pulseaudio_bg {{ colors.secondary.hex if colors.secondary else colors.primary.hex }};
@define-color temperature_bg {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color tray_bg {{ colors.primary.hex }};
@define-color language_bg {{ colors.primary.hex }};
@define-color keyboard_bg {{ colors.primary.hex }};
@define-color mpd_bg {{ colors.primary.hex }};
@define-color media_bg {{ colors.primary.hex }};
@define-color idle_bg {{ colors.background.hex }};
@define-color idle_active {{ colors.text.hex }};

/* Special states */
@define-color disconnected {{ colors.accent.hex if colors.accent else colors.primary.hex }};
@define-color muted {{ colors.background.hex }};
@define-color paused {{ colors.primary.hex }};
@define-color stopped {{ colors.background.hex }};

/* Privacy indicators */
@define-color privacy_screenshare {{ colors.primary.hex }};
@define-color privacy_audio_in {{ colors.primary.hex }};
@define-color privacy_audio_out {{ colors.primary.hex }};

/* Transparency levels */
@define-color transparent_light rgba(0, 0, 0, 0.1);
@define-color transparent_medium rgba(0, 0, 0, 0.2);
@define-color transparent_heavy rgba(0, 0, 0, 0.3); 