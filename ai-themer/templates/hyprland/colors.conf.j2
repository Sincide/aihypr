# Hyprland Color Configuration
# Generated by AI Themer from {{ palette.source_image }}
# Extraction method: {{ palette.extraction_method }}
# Quality score: {{ "%.2f"|format(palette.quality_score) }}

# Color definitions
$background = {{ colors.background | hex }}
$foreground = {{ colors.text | hex }}
$primary = {{ colors.primary | hex }}
$secondary = {{ colors.secondary | hex if colors.secondary else colors.primary | lighten(0.2) | hex }}
$accent = {{ colors.accent | hex if colors.accent else colors.primary | complement | hex }}
$surface = {{ colors.surface | hex if colors.surface else colors.background | lighten(0.1) | hex }}

# Derived colors
$primary_light = {{ colors.primary | lighten(0.3) | hex }}
$primary_dark = {{ colors.primary | darken(0.3) | hex }}
$accent_light = {{ colors.accent | lighten(0.3) | hex if colors.accent else colors.primary | complement | lighten(0.3) | hex }}
$accent_dark = {{ colors.accent | darken(0.3) | hex if colors.accent else colors.primary | complement | darken(0.3) | hex }}

# Background variations
$bg_light = {{ colors.background | lighten(0.1) | hex }}
$bg_dark = {{ colors.background | darken(0.1) | hex }}

# Border colors
$border_active = $primary
$border_inactive = {{ colors.background | lighten(0.2) | hex }}
$border_urgent = {{ colors.primary | mix(colors.text, 0.3) | hex }}

# Window colors
general {
    col.active_border = $border_active
    col.inactive_border = $border_inactive
}

# Decoration colors
decoration {
    col.shadow = {{ colors.background | darken(0.3) | hex }}
    col.shadow_inactive = {{ colors.background | darken(0.1) | hex }}
}

# Group colors
group {
    col.border_active = $primary
    col.border_inactive = $border_inactive
    col.border_locked_active = $accent
    col.border_locked_inactive = {{ colors.accent | desaturate(0.5) | hex if colors.accent else colors.primary | complement | desaturate(0.5) | hex }}
}

# Misc colors
misc {
    col.splash = $primary
    background_color = $background
    splash_color = $primary
} 