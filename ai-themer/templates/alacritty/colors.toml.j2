# Alacritty Color Configuration
# Generated by AI Themer from {{ palette.source_image }}
# Extraction method: {{ palette.extraction_method }}
# Quality score: {{ "%.2f"|format(palette.quality_score) }}

[colors]
# Primary colors
[colors.primary]
background = "{{ colors.background | hex }}"
foreground = "{{ colors.text | hex }}"
dim_foreground = "{{ colors.text | darken(0.2) | hex }}"
bright_foreground = "{{ colors.text | lighten(0.2) | hex }}"

# Cursor colors
[colors.cursor]
text = "{{ colors.background | hex }}"
cursor = "{{ colors.primary | hex }}"

# Vi mode cursor colors
[colors.vi_mode_cursor]
text = "{{ colors.background | hex }}"
cursor = "{{ colors.accent | hex if colors.accent else colors.primary | complement | hex }}"

# Search colors
[colors.search]
[colors.search.matches]
foreground = "{{ colors.background | hex }}"
background = "{{ colors.primary | hex }}"

[colors.search.focused_match]
foreground = "{{ colors.background | hex }}"
background = "{{ colors.accent | hex if colors.accent else colors.primary | complement | hex }}"

# Hints colors
[colors.hints]
[colors.hints.start]
foreground = "{{ colors.background | hex }}"
background = "{{ colors.primary | lighten(0.3) | hex }}"

[colors.hints.end]
foreground = "{{ colors.background | hex }}"
background = "{{ colors.primary | hex }}"

# Line indicator colors
[colors.line_indicator]
foreground = "None"
background = "None"

# Footer bar colors
[colors.footer_bar]
foreground = "{{ colors.text | hex }}"
background = "{{ colors.background | lighten(0.1) | hex }}"

# Selection colors
[colors.selection]
text = "{{ colors.background | hex }}"
background = "{{ colors.primary | alpha(0.3) | hex }}"

# Normal colors
[colors.normal]
black = "{{ colors.background | hex }}"
red = "{{ colors.primary | mix(colors.text, 0.7) | hex }}"
green = "{{ colors.primary | mix(colors.background, 0.3) | saturate(0.3) | hex }}"
yellow = "{{ colors.primary | lighten(0.3) | saturate(0.2) | hex }}"
blue = "{{ colors.primary | hex }}"
magenta = "{{ colors.accent | hex if colors.accent else colors.primary | complement | hex }}"
cyan = "{{ colors.primary | complement | mix(colors.background, 0.2) | hex }}"
white = "{{ colors.text | hex }}"

# Bright colors
[colors.bright]
black = "{{ colors.background | lighten(0.3) | hex }}"
red = "{{ colors.primary | mix(colors.text, 0.7) | lighten(0.2) | hex }}"
green = "{{ colors.primary | mix(colors.background, 0.3) | saturate(0.3) | lighten(0.2) | hex }}"
yellow = "{{ colors.primary | lighten(0.4) | saturate(0.3) | hex }}"
blue = "{{ colors.primary | lighten(0.2) | hex }}"
magenta = "{{ colors.accent | lighten(0.2) | hex if colors.accent else colors.primary | complement | lighten(0.2) | hex }}"
cyan = "{{ colors.primary | complement | mix(colors.background, 0.2) | lighten(0.2) | hex }}"
white = "{{ colors.text | lighten(0.2) | hex }}"

# Dim colors
[colors.dim]
black = "{{ colors.background | darken(0.2) | hex }}"
red = "{{ colors.primary | mix(colors.text, 0.7) | darken(0.2) | hex }}"
green = "{{ colors.primary | mix(colors.background, 0.3) | saturate(0.3) | darken(0.2) | hex }}"
yellow = "{{ colors.primary | lighten(0.1) | saturate(0.1) | hex }}"
blue = "{{ colors.primary | darken(0.2) | hex }}"
magenta = "{{ colors.accent | darken(0.2) | hex if colors.accent else colors.primary | complement | darken(0.2) | hex }}"
cyan = "{{ colors.primary | complement | mix(colors.background, 0.2) | darken(0.2) | hex }}"
white = "{{ colors.text | darken(0.2) | hex }}" 